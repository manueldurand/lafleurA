{% extends 'admin/base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('metronic/assets/plugins/custom/datatables/datatables.bundle.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{%
    set breadcrumb = {
    'Accueil': path('app_admin_dashboard'),
    'Utilisateurs': null,
}
%}

{% block toolbar %}
    {% include 'admin/_layout/_toolbar/toolbar.html.twig' with {'title': 'Utilisateurs', 'breadcrumb': breadcrumb} %}
{% endblock %}

{% block body %}
    <div class="card">
        <!--begin::Card header-->
        <div class="card-header border-0 pt-6">
            <!--begin::Card title-->
            <div class="card-title">
                <!--begin::Search-->
                <div class="d-none align-items-center position-relative my-1 datatable-search-place" data-datatable="{{ datatable.name }}">
                    <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-5">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
{#                    <input type="text" class="form-control form-control-solid w-250px ps-12 datatable-search-place" data-datatable="{{ datatable.name }}" placeholder="Rechercher" />#}
                </div>
                <!--end::Search-->
            </div>
            <!--begin::Card title-->
            <!--begin::Card toolbar-->
            <div class="card-toolbar">
                <!--begin::Toolbar-->
                <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                    <!--begin::Filter-->
                    <button type="button" class="btn btn-light-primary me-3" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                        <i class="ki-duotone ki-filter fs-2">
                            <span class="path1"></span>
                            <span class="path2"></span>
                        </i>Filtrer</button>
                    <!--begin::Menu 1-->
                    <div class="menu menu-sub menu-sub-dropdown w-300px w-md-325px" data-kt-menu="true" id="kt-toolbar-filter">
                        <!--begin::Header-->
                        <div class="px-7 py-5">
                            <div class="fs-4 text-dark fw-bold">Filtres</div>
                        </div>
                        <!--end::Header-->
                        <!--begin::Separator-->
                        <div class="separator border-gray-200"></div>
                        <!--end::Separator-->
                        <!--begin::Content-->
                        <div class="px-7 py-5">
                            <!--begin::Input group-->
                            <div class="mb-10">
                                <!--begin::Label-->
                                <label class="form-label fs-5 fw-semibold mb-3">Civilit√©:</label>
                                <!--end::Label-->
                                <!--begin::Input-->
                                <select class="form-select form-select-solid fw-bold datatable-filter" data-id="{{ datatable.name }}" data-kt-select2="true" data-placeholder="Choisissez une option" data-allow-clear="true" data-dropdown-parent="#kt-toolbar-filter">
                                    <option></option>
                                    {% for gender, value in genders %}
                                        <option value="{{ value }}">{{ gender }}</option>
                                    {% endfor %}
                                </select>
                                <!--end::Input-->
                            </div>
                            <!--end::Input group-->
                            <!--begin::Input group-->
                            <div class="mb-10">
                                <!--begin::Label-->
                                <label class="form-label fs-5 fw-semibold mb-3">Utilisateurs actif</label>
                                <!--end::Label-->
                                <!--begin::Options-->
                                <div class="d-flex flex-column flex-wrap fw-semibold" data-kt-customer-table-filter="payment_type">
                                    <!--begin::Option-->
                                    <label class="form-check form-check-sm form-check-custom form-check-solid mb-3 me-5">
                                        <input class="form-check-input" type="radio" name="active_user" value="" checked="checked" />
                                        <span class="form-check-label text-gray-600">Tous</span>
                                    </label>
                                    <!--end::Option-->
                                    <!--begin::Option-->
                                    <label class="form-check form-check-sm form-check-custom form-check-solid mb-3 me-5">
                                        <input class="form-check-input" type="radio" name="active_user" value="true" />
                                        <span class="form-check-label text-gray-600">Oui</span>
                                    </label>
                                    <!--end::Option-->
                                    <!--begin::Option-->
                                    <label class="form-check form-check-sm form-check-custom form-check-solid mb-3">
                                        <input class="form-check-input" type="radio" name="active_user" value="false" />
                                        <span class="form-check-label text-gray-600">Non</span>
                                    </label>
                                    <!--end::Option-->
                                </div>
                                <!--end::Options-->
                            </div>
                            <!--end::Input group-->
                        </div>
                        <!--end::Content-->
                    </div>
                    <!--end::Menu 1-->
                    <!--end::Filter-->
                    <!--begin::Add customer-->
                    <a href="{{ path('app_admin_users_new') }}" class="btn btn-primary">Ajouter un utilisateur</a>
                    <!--end::Add customer-->
                </div>
                <!--end::Toolbar-->
            </div>
            <!--end::Card toolbar-->
        </div>
        <!--end::Card header-->
        <!--begin::Card body-->
        <div class="card-body pt-0">
            <!--begin::Table-->
            <div id="dt_users" class="keole-datatable" data-settings="{{ datatable_settings(datatable)|e }}" data-datatable="{{ datatable.name }}">
                Chargement
                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
            </div>
            <!--end::Table-->
        </div>
        <!--end::Card body-->
    </div>
    <!--end::Card-->
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('metronic/assets/plugins/custom/datatables/datatables.bundle.js') }}"></script>
    <script src="{{ asset('bundles/datatables/js/datatables.js') }}"></script>
    <script src="{{ asset('js/datatable/initialization.js') }}"></script>
{% endblock %}